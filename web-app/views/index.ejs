<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesquisar Posts no Reddit</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        .form-container {
            max-width: 500px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        label {
            font-size: 16px;
            display: block;
            margin: 10px 0 5px;
        }
        input[type="text"], input[type="number"], select {
            width: 100%;
            padding: 8px;
            margin: 8px 0;
            border-radius: 4px;
            border: 1px solid #ccc;
        }
        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
        }
        input[type="submit"]:hover {
            background-color: #45a049;
        }
        .result {
            margin-top: 20px;
            background-color: #f1f1f1;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid #ccc;
            max-width: 900px;
            margin-left: auto;
            margin-right: auto;
        }
        pre {
            white-space: pre-wrap;
            word-wrap: break-word;
        }
    </style>
</head>
<body>

    <h1>Pesquisar Posts no Reddit</h1>

    <div class="form-container">
        <form id="redditForm">
            <label for="subreddit">Subreddit:</label>
            <input type="text" id="subreddit" name="subreddit" required>

            <label for="sort">Ordenar por:</label>
            <select id="sort" name="sort">
                <option value="new">Novo</option>
                <option value="hot">Popular</option>
                <option value="top">Top</option>
            </select>

            <label for="num">Número de Resultados:</label>
            <input type="number" id="num" name="num" value="50" min="1">

            <input type="submit" value="Pesquisar">
        </form>
    </div>

    <div id="resultContainer" class="result" style="display: none;">
        <h2>Resultados:</h2>
        <pre id="resultText"></pre>
    </div>

    <script>
        document.getElementById('redditForm').addEventListener('submit', async function(event) {
            event.preventDefault();  // Impedir o envio normal do formulário

            // Obter valores do formulário
            const subreddit = document.getElementById('subreddit').value;
            const sort = document.getElementById('sort').value;
            const num = document.getElementById('num').value;

            const url = `https://function-miniprojeto/api/httpTrigger?subreddit=${subreddit}&sort=${sort}&num=${num}`;

            try {
                const response = await fetch(url, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    const data = await response.text();
                    document.getElementById('resultText').textContent = data;
                    document.getElementById('resultContainer').style.display = 'block';
                } else {
                    document.getElementById('resultText').textContent = 'Erro ao obter os resultados: ' + response.statusText;
                    document.getElementById('resultContainer').style.display = 'block';
                }
            } catch (error) {
                document.getElementById('resultText').textContent = 'Erro: ' + error.message;
                document.getElementById('resultContainer').style.display = 'block';
            }
        });
    </script>

</body>
</html>
